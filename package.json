{
  "name": "pwa-starter",
  "version": "0.0.1",
  "description": "PWA Starter with Preact",
  "main": "server/index.js",
  "heroku-run-build-script": true,
  "scripts": {
    "preinstall": "if test \"$NODE_ENV\" = \"production\"; then rm -rf public; mkdir public; else rm .git/hooks/pre-commit; cp pre-commit.sh .git/hooks/pre-commit; fi",
    "start": "if test \"$NODE_ENV\" = \"production\"; then npm run browse; else npm run dev; fi",
    "dev": "npm run watch",
    "build-server": "rollup -c config/server.js",
    "watch": "npm-run-all --parallel build:dev watch-assets browse:dev",
    "prebuild:dev": "npm run lint --silent",
    "build:dev": "rollup -c config/dev.js -w",
    "watch-assets": "sane 'npm run prelint' src/assets",
    "browse:dev": "node server/index.js",
    "browse": "node server/index.js",
    "prebuild": "rm -rf public; mkdir public; cp -r src/assets/* public/;",
    "build": "rollup -c config/prod.js",
    "postbuild": "react-snap",
    "prelint": "cp -r src/assets/* public/",
    "lint": "standard --verbose | snazzy",
    "test": "npm run build:dev",
    "docs": "cd src/ && docco *.js **/*.js --output ../docs --layout linear",
    "postdocs": "surge --d pwa-starter.surge.sh -p docs/"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "ignore": [
      "server/bundle.js"
    ]
  },
  "reactSnap": {
    "source": "public",
    "puppeteerArgs": ["--no-sandbox", "--disable-setuid-sandbox"]
  },
  "keywords": [],
  "author": "Adrian Unger",
  "license": "MIT",
  "dependencies": {
    "@app-elements/carousel": "1.0.4",
    "@app-elements/connect": "0.3.6",
    "@app-elements/dropdown": "1.0.7",
    "@app-elements/equal": "1.0.2",
    "@app-elements/form": "0.0.3",
    "@app-elements/helmet": "1.0.2",
    "@app-elements/image": "1.1.2",
    "@app-elements/level": "1.0.2",
    "@app-elements/list-resource": "1.0.9",
    "@app-elements/loading-indicator": "1.0.2",
    "@app-elements/modal": "1.0.6",
    "@app-elements/notification": "1.0.2",
    "@app-elements/pagination": "1.0.10",
    "@app-elements/router": "1.0.10",
    "@app-elements/tooltip": "1.0.5",
    "@app-elements/with-request": "1.0.9",
    "@app-elements/with-state": "1.0.8",
    "@wasmuth/path-reducer": "0.1.5",
    "atom": "1.3.1",
    "compression": "1.7.3",
    "polka": "0.5.2",
    "preact": "8.4.2",
    "preact-portal": "1.1.3",
    "preact-render-to-string": "4.1.0",
    "sirv": "0.2.2",
    "wasmuth": "2.0.6",
    "xmlhttprequest": "1.8.0"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.8.5",
    "babel-core": "6.26.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-jsx-import": "github:staydecent/babel-plugin-jsx-import",
    "babel-plugin-module-resolver": "3.1.3",
    "babel-plugin-transform-es2015-spread": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24",
    "docco": "0.8.0",
    "less": "3.9.0",
    "lint-staged": "8.1.4",
    "npm-run-all": "4.1.5",
    "react-snap": "1.23.0",
    "rollup": "1.1.2",
    "rollup-plugin-alias": "1.5.1",
    "rollup-plugin-babel": "3.0.7",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-css-only": "1.0.0",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-uglify": "6.0.2",
    "sane": "4.0.2",
    "snazzy": "8.0.0",
    "standard": "12.0.1"
  }
}
