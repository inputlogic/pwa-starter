{
  "name": "pwa-starter",
  "version": "0.1.0",
  "description": "PWA Starter with Preact",
  "main": "src/index.js",
  "heroku-run-build-script": true,
  "scripts": {
    "preinstall": "if test -z \"$NODE_ENV\"; then rm .git/hooks/pre-commit; cp pre-commit.sh .git/hooks/pre-commit; else rm -rf public; mkdir public; fi",
    "start": "if test -z \"$NODE_ENV\"; then npm run dev; else npm run browse; fi",
    "dev": "npm-run-all --parallel build:dev",
    "prebuild:dev": "npm run lint --silent",
    "build:dev": "parcel serve src/index.html -d public",
    "browse": "node scripts/dev-server.js",
    "prebuild": "rm -rf public; mkdir public; cp -r src/assets/* public/;",
    "build": "parcel build src/index.html -d public",
    "postbuild": "react-snap",
    "lint": "standard --verbose --parser babel-eslint | snazzy",
    "test": "standard --verbose --parser babel-eslint | snazzy"
  },
  "lint-staged": {
    "*.js": [
      "standard --verbose --parser babel-eslint",
      "git add"
    ]
  },
  "reactSnap": {
    "source": "public",
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  },
  "alias": {
    "react": "preact",
    "react-dom": "preact",
    "h": "preact"
  },
  "keywords": [],
  "author": "Adrian Unger",
  "license": "MIT",
  "dependencies": {
    "@app-elements/helmet": "^1.0.3",
    "@wasmuth/path-reducer": "0.1.5",
    "@wasmuth/without": "2.1.1",
    "atom": "1.3.1",
    "compression": "1.7.4",
    "polka": "0.5.2",
    "preact": "10.0.0-beta.2",
    "sirv": "0.4.2",
    "wasmuth": "^2.0.6",
    "xmlhttprequest": "1.8.0"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-jsx-import": "github:staydecent/babel-plugin-jsx-import",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-spread": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24",
    "lint-staged": "8.1.7",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.3",
    "react-snap": "1.23.0",
    "sane": "4.1.0",
    "snazzy": "8.0.0",
    "standard": "12.0.1"
  }
}
